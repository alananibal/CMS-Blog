<section class="container">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="p-2">
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div class="p-2">
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn btn-primary m-3">Create</button>
  </form>
</section>



{{#if posts.length}}
<section class="container p-4">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="btn btn-primary m-3">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>